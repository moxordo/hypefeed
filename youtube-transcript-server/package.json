{
  "name": "youtube-transcript-mcp-server",
  "version": "1.0.1",
  "description": "Model Context Protocol (MCP) server for retrieving YouTube video transcripts with internalized logic and zero fragile dependencies",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "youtube-transcript-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "tsx src/standalone-test.ts",
    "test:mcp": "tsx src/test-client.ts",
    "test:debug": "tsx src/debug-test.ts",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "youtube",
    "transcript",
    "captions",
    "subtitles"
  ],
  "author": "andy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andy/youtube-transcript-mcp-server"
  },
  "homepage": "https://github.com/andy/youtube-transcript-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/andy/youtube-transcript-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}