{
  "name": "hypegit",
  "version": "1.0.0",
  "description": "Developer hype & mindshare tracker using GitHub trending data",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "bun run build:worker",
    "build:worker": "esbuild src/index.ts --bundle --outfile=dist/worker.js --format=esm --target=es2022",
    "deploy": "wrangler deploy",
    "db:generate": "prisma generate",
    "db:migrate:local": "wrangler d1 migrations apply hypegit-repos --local",
    "db:migrate:remote": "wrangler d1 migrations apply hypegit-repos --remote",
    "db:seed": "bun run scripts/seed-db.ts"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "date-fns": "^4.1.0",
    "hono": "^4.9.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250913.0",
    "@types/node": "^22.18.3",
    "esbuild": "^0.24.2",
    "prisma": "^6.16.2",
    "typescript": "^5.9.2",
    "wrangler": "^4.36.0"
  },
  "keywords": [
    "cloudflare-workers",
    "github-trending",
    "developer-tools",
    "hype-tracking"
  ]
}
